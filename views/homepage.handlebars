<h3 class="py-3">Check Out Blogs From the Tech Community</h3>
<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="card text-center w-75 m-3">
  <div class="card-header">
    <a href="/blog/{{blog.id}}" class="blog-link fs-4"> {{blog.title}} </a>
  </div>
  <div class="card-body">
    <p class="card-text"> {{blog.body}}</p>
  </div>
  <div class="card-footer text-body-secondary">
    <p class="card-text">Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
</div>

{{/each}}